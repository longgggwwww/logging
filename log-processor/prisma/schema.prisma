// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Project table - Manage projects
model Project {
  id        String     @id @default(uuid()) @map("_id")
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  // Relations
  functions Function[]
  logs      Log[]

  @@map("projects")
}

// Function table - Manage functions within projects
model Function {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  logs    Log[]

  @@unique([projectId, name])
  @@index([projectId])
  @@index([name])
  @@map("functions")
}

// Log table - Store logs related to function executions
model Log {
  id        String   @id @default(uuid()) @map("_id")
  projectId String
  functionId String
  
  // Log information
  method    String   // GET, POST, PATCH, PUT, DELETE, OPTIONS
  type      String   // DEBUG, SUCCESS, INFO, WARNING, ERROR
  
  // Request information (grouped as Json to match LogMessage.request)
  request   Json?
  
  // Response information (grouped as Json to match LogMessage.response)
  response  Json?
  
  // Additional information
  consoleLog      String?
  additionalData  Json?
  latency         Int?      // in milliseconds
  
  // User information (grouped to match LogMessage.createdBy)
  createdBy Json?
  
  // Timestamps
  createdAt DateTime
  
  // Relations
  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  function Function @relation(fields: [functionId], references: [id], onDelete: Cascade)

  // Indexes for filtering (focused on specified fields)
  @@index([id])
  @@index([projectId])
  @@index([functionId])
  @@index([method])
  @@index([type])
  @@index([createdAt])
  @@index([projectId, functionId])
  @@index([projectId, type])
  @@index([projectId, createdAt])
  @@index([functionId, type])
  @@map("logs")
}
