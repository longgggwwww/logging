{
  "name": "discord-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple Discord bot built with TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "fix:all": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript"
  ],
  "author": "DANH PHI LONG + AI",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.15.0"
  },
  "devDependencies": {
    "@types/kafkajs": "^1.8.2",
    "ts-node": "^10.0.0",
    "tsx": "^4.20.6"
  },
  "ts-node": {
    "esm": true
  }
}
