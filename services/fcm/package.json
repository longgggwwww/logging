{
  "name": "fcm-service",
  "version": "1.0.0",
  "type": "module",
  "description": "FCM notification service for error logs using Firebase Admin SDK",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "fix:all": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "fcm",
    "firebase",
    "kafka",
    "notification"
  ],
  "author": "DANH PHI LONG",
  "license": "ISC",
  "dependencies": {
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/kafkajs": "^1.8.2"
  }
}
